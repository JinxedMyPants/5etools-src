{
	"$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
	"version": "0.2",
	"language": "de,de-DE",
	"dictionaryDefinitions": [
		{
			"name": "dnd-woerter",
			"path": "./spellcheck/dnd-words.txt",
			"addWords": true
		},
		{
			"name": "javascript-woerter",
			"path": "./spellcheck/javascript-words.txt",
			"addWords": true
		},
		{
			"name": "kuenstler-namen",
			"path": "./spellcheck/artist-names.txt",
			"addWords": true
		},
		{
			"name": "credits-namen",
			"path": "./spellcheck/credits-names.txt",
			"addWords": true
		}
	],
	"dictionaries": [
		"dnd-woerter",
		"javascript-woerter",
		"kuenstler-namen",
		"credits-namen"
	],
	"ignorePaths": [
		"./spellcheck/*.txt",
		"css/",
		"data/generated/",
		"js/sw-files.js",
		"lib/",
		"node_modules",
		"search/"
	],
	"languageSettings": [
		{
			"languageId": "json",
			"ignoreRegExpList": [
				"/\"path\": \".+\"/",
				"/\"url\": \".+\"/",
				"/\"replace\": \".+\"/",
				"/\"foundryId\": \".+\"/",
				"/\"race\": \".+\"/",
				"/\"background\": \".+\"/",
				"/\"enchantmentRiderParent\": \".+\"/",
				"/\"source\": \".+\"/",
				"/\"condition\": \".+\"/"
			]
		}
	]
}
